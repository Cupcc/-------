{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang build active file", //默认最好不要修改
            "command": "/usr/bin/g++",
            "args": [
                "-fcolor-diagnostics", //使用颜色
                "-fansi-escape-codes", //格式化输出调试结果
                "-std=c++20",
                "-stdlib=libc++",

                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}